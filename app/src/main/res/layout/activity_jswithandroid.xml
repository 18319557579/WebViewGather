<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/ll_out_container_js_with_android">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_operation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android调用JS 使用loalUrl"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_operation_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android调用JS 使用evaluateJavaScript"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_operation_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打印栈"
                android:textAllCaps="false"/>



        </LinearLayout>
    </HorizontalScrollView>

<!--    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头部的按钮"/>-->


</LinearLayout>