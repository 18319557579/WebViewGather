<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenWebActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/middleagent_ll_web_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_theme_color_green">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--drawablePadding指的是drawable和文字之间的间隔-->
            <TextView
                android:id="@+id/middleagent_tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"

                android:text="返回"
                android:textColor="@color/app_background_color_write"
                android:textSize="16sp"

                android:drawableLeft="@drawable/arrow_left_white"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/middleagent_tv_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxWidth="240dp"
                android:padding="13dp"

                android:text="标题"
                android:textColor="@color/app_background_color_write"
                android:textSize="17sp"
                android:lines="1"/>
                
            <ImageView
                android:id="@+id/middleagent_more_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_web"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"/>

        </RelativeLayout>
        <View
            android:id="@+id/middleagent_line_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_background_color_write"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/middleagent_ll_web_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


</LinearLayout>